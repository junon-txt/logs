---
layout: layouts/base.njk
pagination:
  data: entries
  size: 1
  alias: entry
permalink: "/{{ entry.metadata.date | replace('-', '/') }}/index.html"
---

<article>
  <header class="entry-header">
    <div class="entry-meta">
      <time class="entry-date" datetime="{{ entry.metadata.date }}">{{ entry.metadata.date }}</time>
      {% if entry.metadata.location %}
        <span class="entry-location-sep">·</span>
        <span class="entry-location">{{ entry.metadata.location }}</span>
      {% endif %}
    </div>
    {% if entry.metadata.tags %}
      <div class="entry-tags-inline">
        {% for tag in entry.metadata.tags %}
          <a href="{{ ('/tags/' + (tag | slug) + '/') | url | relativeUrl }}" class="tag-small">{{ tag }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </header>
  
  <div class="content">
    {{ entry.body | markdown(entry.metadata.date) | safe }}
  </div>
  
  <nav class="entry-nav">
    <div class="entry-nav-links">
      {% if entry.previous %}
        <a href="{{ ('/' + entry.previous.date | replace('-', '/') + '/') | url | relativeUrl }}" class="nav-link nav-prev">
          ← Previous: {{ entry.previous.title }}
        </a>
      {% else %}
        <span class="nav-link nav-prev disabled"></span>
      {% endif %}
      
      <a href="{{ '/' | url | relativeUrl }}" class="nav-link nav-home">Home</a>
      
      {% if entry.next %}
        <a href="{{ ('/' + entry.next.date | replace('-', '/') + '/') | url | relativeUrl }}" class="nav-link nav-next">
          Next: {{ entry.next.title }} →
        </a>
      {% else %}
        <span class="nav-link nav-next disabled"></span>
      {% endif %}
    </div>
  </nav>
</article>

